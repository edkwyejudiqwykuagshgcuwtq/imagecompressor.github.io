    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Tool navigation
            const toolCards = document.querySelectorAll('.tool-card');
            const toolContainers = document.querySelectorAll('.tool-container');
            
            toolCards.forEach(card => {
                card.addEventListener('click', function() {
                    const toolId = this.getAttribute('data-tool');
                    
                    // Hide all tool containers
                    toolContainers.forEach(container => {
                        container.classList.remove('active');
                    });
                    
                    // Show selected tool
                    document.getElementById(`${toolId}-tool`).classList.add('active');
                    
                    // Scroll to tool
                    document.getElementById(`${toolId}-tool`).scrollIntoView({ behavior: 'smooth' });
                });
            });
            
            // Back to tools links
            const backLinks = document.querySelectorAll('.back-to-tools');
            backLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // Hide all tool containers
                    toolContainers.forEach(container => {
                        container.classList.remove('active');
                    });
                    
                    // Scroll to tools section
                    document.getElementById('tools').scrollIntoView({ behavior: 'smooth' });
                });
            });
            
            // Initialize all tools
            initImageCompressor();
            initPdfMerger();
            initTextToSpeech();
            initQrGenerator();
            
            /* Image Compressor Tool */
            function initImageCompressor() {
                // DOM elements
                const uploadArea = document.getElementById('image-upload-area');
                const fileInput = document.getElementById('image-file-input');
                const fileInfo = document.getElementById('image-file-info');
                const qualitySlider = document.getElementById('image-quality');
                const qualityValue = document.getElementById('image-quality-value');
                const formatSelect = document.getElementById('image-format');
                const losslessCheckbox = document.getElementById('lossless');
                const compressBtn = document.getElementById('compress-btn');
                const resetBtn = document.getElementById('image-reset-btn');
                const loading = document.getElementById('image-loading');
                const results = document.getElementById('image-results');
                const originalImg = document.getElementById('original-img');
                const compressedImg = document.getElementById('compressed-img');
                const originalSize = document.getElementById('original-size');
                const compressedSize = document.getElementById('compressed-size');
                const reduction = document.getElementById('reduction');
                const downloadBtn = document.getElementById('image-download-btn');
                const downloadAllBtn = document.getElementById('image-download-all-btn');
                
                // Variables
                let selectedFiles = [];
                let compressedImages = [];
                
                // Event listeners
                uploadArea.addEventListener('click', () => fileInput.click());
                uploadArea.addEventListener('dragover', (e) => {
                    e.preventDefault();
                    uploadArea.classList.add('active');
                });
                uploadArea.addEventListener('dragleave', () => {
                    uploadArea.classList.remove('active');
                });
                uploadArea.addEventListener('drop', (e) => {
                    e.preventDefault();
                    uploadArea.classList.remove('active');
                    if (e.dataTransfer.files.length) {
                        handleFileSelect(e.dataTransfer.files);
                    }
                });
                
                fileInput.addEventListener('change', () => {
                    if (fileInput.files.length) {
                        handleFileSelect(fileInput.files);
                    }
                });
                
                qualitySlider.addEventListener('input', () => {
                    qualityValue.textContent = `${qualitySlider.value}%`;
                    if (losslessCheckbox.checked && qualitySlider.value < 100) {
                        losslessCheckbox.checked = false;
                    }
                });
                
                losslessCheckbox.addEventListener('change', () => {
                    if (losslessCheckbox.checked) {
                        qualitySlider.value = 100;
                        qualityValue.textContent = '100%';
                    }
                });
                
                compressBtn.addEventListener('click', compressImages);
                resetBtn.addEventListener('click', resetTool);
                downloadBtn.addEventListener('click', downloadImage);
                downloadAllBtn.addEventListener('click', downloadAllImages);
                
                // Functions
                function handleFileSelect(files) {
                    selectedFiles = Array.from(files).filter(file => 
                        file.type.match('image.*') && 
                        ['image/jpeg', 'image/png', 'image/gif', 'image/webp'].includes(file.type)
                    );
                    
                    if (selectedFiles.length === 0) {
                        alert('Please select image files (JPEG, PNG, GIF, or WEBP).');
                        return;
                    }
                    
                    if (selectedFiles.length === 1) {
                        fileInfo.textContent = `${selectedFiles[0].name} (${formatBytes(selectedFiles[0].size)})`;
                    } else {
                        fileInfo.textContent = `${selectedFiles.length} files selected (${formatBytes(selectedFiles.reduce((total, file) => total + file.size, 0))})`;
                    }
                    
                    compressBtn.classList.remove('btn-disabled');
                    compressBtn.disabled = false;
                    
                    // Display first image preview
                    if (selectedFiles.length > 0) {
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            originalImg.src = e.target.result;
                        };
                        reader.readAsDataURL(selectedFiles[0]);
                    }
                }
                
                function compressImages() {
                    if (selectedFiles.length === 0) return;
                    
                    // Show loading state
                    loading.classList.add('active');
                    results.classList.remove('active');
                    downloadAllBtn.style.display = selectedFiles.length > 1 ? 'block' : 'none';
                    
                    // Process all images
                    compressedImages = [];
                    let processedCount = 0;
                    
                    selectedFiles.forEach((file, index) => {
                        const quality = losslessCheckbox.checked ? 1 : parseInt(qualitySlider.value) / 100;
                        const format = formatSelect.value === 'original' 
                            ? file.type.split('/')[1] 
                            : formatSelect.value;
                        
                        // Create canvas to compress image
                        const img = new Image();
                        img.onload = function() {
                            const canvas = document.createElement('canvas');
                            const ctx = canvas.getContext('2d');
                            
                            // Calculate new dimensions if needed (for very large images)
                            let width = img.width;
                            let height = img.height;
                            const maxDimension = 2000; // Max width/height
                            
                            if (width > height && width > maxDimension) {
                                height *= maxDimension / width;
                                width = maxDimension;
                            } else if (height > maxDimension) {
                                width *= maxDimension / height;
                                height = maxDimension;
                            }
                            
                            canvas.width = width;
                            canvas.height = height;
                            
                            // Draw image on canvas
                            ctx.drawImage(img, 0, 0, width, height);
                            
                            // Compress image
                            canvas.toBlob((blob) => {
                                processedCount++;
                                
                                compressedImages.push({
                                    originalFile: file,
                                    compressedBlob: blob,
                                    originalSize: file.size,
                                    compressedSize: blob.size
                                });
                                
                                // When all images are processed
                                if (processedCount === selectedFiles.length) {
                                    displayResults();
                                }
                                
                            }, `image/${format}`, quality);
                        };
                        
                        img.src = URL.createObjectURL(file);
                    });
                }
                
                function displayResults() {
                    if (compressedImages.length === 0) return;
                    
                    // Display first image results
                    const firstResult = compressedImages[0];
                    const compressedUrl = URL.createObjectURL(firstResult.compressedBlob);
                    compressedImg.src = compressedUrl;
                    
                    // Update stats
                    originalSize.textContent = formatBytes(firstResult.originalSize);
                    compressedSize.textContent = formatBytes(firstResult.compressedSize);
                    
                    const reductionPercent = ((firstResult.originalSize - firstResult.compressedSize) / firstResult.originalSize * 100).toFixed(1);
                    reduction.textContent = `${reductionPercent}%`;
                    
                    // Show results
                    loading.classList.remove('active');
                    results.classList.add('active');
                    
                    // Scroll to results
                    results.scrollIntoView({ behavior: 'smooth' });
                }
                
                function downloadImage() {
                    if (compressedImages.length === 0) return;
                    
                    const firstResult = compressedImages[0];
                    const url = URL.createObjectURL(firstResult.compressedBlob);
                    const a = document.createElement('a');
                    a.href = url;
                    
                    // Get original filename without extension
                    const originalName = firstResult.originalFile.name.split('.').slice(0, -1).join('.');
                    const format = formatSelect.value === 'original' 
                        ? firstResult.originalFile.type.split('/')[1] 
                        : formatSelect.value;
                    
                    a.download = `${originalName}-compressed.${format}`;
                    document.body.appendChild(a);
                    a.click();
                    document.body.removeChild(a);
                    URL.revokeObjectURL(url);
                }
                
                function downloadAllImages() {
                    if (compressedImages.length <= 1) return;
                    
                    // Create a zip file if there are multiple images
                    alert('Batch download feature would be implemented with a library like JSZip in a production environment. This would create a ZIP file containing all compressed images.');
                    
                    // In a real implementation, we would use JSZip or similar to create a zip file
                    // For this demo, we'll download each file individually
                    compressedImages.forEach((result, index) => {
                        const url = URL.createObjectURL(result.compressedBlob);
                        const a = document.createElement('a');
                        a.href = url;
                        
                        const originalName = result.originalFile.name.split('.').slice(0, -1).join('.');
                        const format = formatSelect.value === 'original' 
                            ? result.originalFile.type.split('/')[1] 
                            : formatSelect.value;
                        
                        a.download = `${originalName}-compressed.${format}`;
                        document.body.appendChild(a);
                        a.click();
                        document.body.removeChild(a);
                        URL.revokeObjectURL(url);
                    });
                }
                
                function resetTool() {
                    selectedFiles = [];
                    compressedImages = [];
                    fileInput.value = '';
                    fileInfo.textContent = 'No files selected';
                    qualitySlider.value = 80;
                    qualityValue.textContent = '80%';
                    formatSelect.value = 'original';
                    losslessCheckbox.checked = false;
                    compressBtn.classList.add('btn-disabled');
                    compressBtn.disabled = true;
                    loading.classList.remove('active');
                    results.classList.remove('active');
                    originalImg.src = '';
                    compressedImg.src = '';
                    downloadAllBtn.style.display = 'none';
                }
            }
            
            /* PDF Merger Tool */
            function initPdfMerger() {
                // DOM elements
                const uploadArea = document.getElementById('pdf-upload-area');
                const fileInput = document.getElementById('pdf-file-input');
                const fileInfo = document.getElementById('pdf-file-info');
                const pdfList = document.getElementById('pdf-list');
                const outputName = document.getElementById('pdf-output-name');
                const mergeBtn = document.getElementById('merge-pdf-btn');
                const resetBtn = document.getElementById('pdf-reset-btn');
                const loading = document.getElementById('pdf-loading');
                const results = document.getElementById('pdf-results');
                const pdfCount = document.getElementById('pdf-count');
                const pdfTotalSize = document.getElementById('pdf-total-size');
                const downloadBtn = document.getElementById('pdf-download-btn');
                
                // Variables
                let pdfFiles = [];
                let mergedPdf = null;
                
                // Event listeners
                uploadArea.addEventListener('click', () => fileInput.click());
                uploadArea.addEventListener('dragover', (e) => {
                    e.preventDefault();
                    uploadArea.classList.add('active');
                });
                uploadArea.addEventListener('dragleave', () => {
                    uploadArea.classList.remove('active');
                });
                uploadArea.addEventListener('drop', (e) => {
                    e.preventDefault();
                    uploadArea.classList.remove('active');
                    if (e.dataTransfer.files.length) {
                        handleFileSelect(e.dataTransfer.files);
                    }
                });
                
                fileInput.addEventListener('change', () => {
                    if (fileInput.files.length) {
                        handleFileSelect(fileInput.files);
                    }
                });
                
                mergeBtn.addEventListener('click', mergePdfs);
                resetBtn.addEventListener('click', resetTool);
                downloadBtn.addEventListener('click', downloadPdf);
                
                // Functions
                function handleFileSelect(files) {
                    const newPdfs = Array.from(files).filter(file => file.type === 'application/pdf');
                    
                    if (newPdfs.length === 0) {
                        alert('Please select PDF files.');
                        return;
                    }
                    
                    pdfFiles = [...pdfFiles, ...newPdfs];
                    updateFileList();
                    updateFileInfo();
                    
                    if (pdfFiles.length > 0) {
                        mergeBtn.classList.remove('btn-disabled');
                        mergeBtn.disabled = false;
                    }
                }
                
                function updateFileList() {
                    pdfList.innerHTML = '';
                    
                    pdfFiles.forEach((file, index) => {
                        const item = document.createElement('div');
                        item.className = 'pdf-item';
                        item.innerHTML = `
                            <i>üìÑ</i>
                            <span class="pdf-item-name">${file.name}</span>
                            <span class="pdf-item-size">${formatBytes(file.size)}</span>
                            <span class="pdf-item-remove" data-index="${index}">‚úï</span>
                        `;
                        pdfList.appendChild(item);
                    });
                    
                    // Add event listeners to remove buttons
                    document.querySelectorAll('.pdf-item-remove').forEach(btn => {
                        btn.addEventListener('click', function() {
                            const index = parseInt(this.getAttribute('data-index'));
                            pdfFiles.splice(index, 1);
                            updateFileList();
                            updateFileInfo();
                            
                            if (pdfFiles.length === 0) {
                                mergeBtn.classList.add('btn-disabled');
                                mergeBtn.disabled = true;
                            }
                        });
                    });
                }
                
                function updateFileInfo() {
                    if (pdfFiles.length === 0) {
                        fileInfo.textContent = 'No files selected';
                    } else if (pdfFiles.length === 1) {
                        fileInfo.textContent = `${pdfFiles[0].name} (${formatBytes(pdfFiles[0].size)})`;
                    } else {
                        const totalSize = pdfFiles.reduce((total, file) => total + file.size, 0);
                        fileInfo.textContent = `${pdfFiles.length} files selected (${formatBytes(totalSize)})`;
                    }
                }
                
                async function mergePdfs() {
                    if (pdfFiles.length === 0) return;
                    
                    loading.classList.add('active');
                    results.classList.remove('active');
                    
                    try {
                        const { PDFDocument } = PDFLib;
                        const mergedPdfDoc = await PDFDocument.create();
                        
                        // Merge all PDFs
                        for (const file of pdfFiles) {
                            const fileBytes = await readFileAsArrayBuffer(file);
                            const pdfDoc = await PDFDocument.load(fileBytes);
                            const pages = await mergedPdfDoc.copyPages(pdfDoc, pdfDoc.getPageIndices());
                            pages.forEach(page => mergedPdfDoc.addPage(page));
                        }
                        
                        const mergedPdfBytes = await mergedPdfDoc.save();
                        mergedPdf = new Blob([mergedPdfBytes], { type: 'application/pdf' });
                        
                        // Update results
                        pdfCount.textContent = pdfFiles.length;
                        const totalSize = pdfFiles.reduce((total, file) => total + file.size, 0);
                        pdfTotalSize.textContent = formatBytes(totalSize);
                        
                        loading.classList.remove('active');
                        results.classList.add('active');
                        results.scrollIntoView({ behavior: 'smooth' });
                    } catch (error) {
                        console.error('Error merging PDFs:', error);
                        alert('An error occurred while merging the PDFs. Please try again.');
                        loading.classList.remove('active');
                    }
                }
                
                function readFileAsArrayBuffer(file) {
                    return new Promise((resolve, reject) => {
                        const reader = new FileReader();
                        reader.onload = () => resolve(reader.result);
                        reader.onerror = reject;
                        reader.readAsArrayBuffer(file);
                    });
                }
                
                function downloadPdf() {
                    if (!mergedPdf) return;
                    
                    const url = URL.createObjectURL(mergedPdf);
                    const a = document.createElement('a');
                    a.href = url;
                    
                    let filename = 'merged.pdf';
                    if (outputName.value.trim() !== '') {
                        filename = outputName.value.trim();
                        if (!filename.toLowerCase().endsWith('.pdf')) {
                            filename += '.pdf';
                        }
                    }
                    
                    a.download = filename;
                    document.body.appendChild(a);
                    a.click();
                    document.body.removeChild(a);
                    URL.revokeObjectURL(url);
                }
                
                function resetTool() {
                    pdfFiles = [];
                    mergedPdf = null;
                    fileInput.value = '';
                    fileInfo.textContent = 'No files selected';
                    pdfList.innerHTML = '';
                    outputName.value = 'merged-document.pdf';
                    mergeBtn.classList.add('btn-disabled');
                    mergeBtn.disabled = true;
                    loading.classList.remove('active');
                    results.classList.remove('active');
                }
            }
            
            /* Text to Speech Tool */
            function initTextToSpeech() {
                // DOM elements
                const textInput = document.getElementById('tts-text');
                const voiceOptions = document.getElementById('voice-options');
                const rateSlider = document.getElementById('tts-rate');
                const rateValue = document.getElementById('tts-rate-value');
                const pitchSlider = document.getElementById('tts-pitch');
                const pitchValue = document.getElementById('tts-pitch-value');
                const playBtn = document.getElementById('play-tts-btn');
                const stopBtn = document.getElementById('stop-tts-btn');
                const resetBtn = document.getElementById('tts-reset-btn');
                const downloadBtn = document.getElementById('download-tts-btn');
                
                // Variables
                let voices = [];
                let selectedVoice = null;
                let speechSynthesis = window.speechSynthesis;
                let utterance = null;
                let audioChunks = [];
                let mediaRecorder = null;
                
                // Event listeners
                rateSlider.addEventListener('input', () => {
                    rateValue.textContent = rateSlider.value;
                });
                
                pitchSlider.addEventListener('input', () => {
                    pitchValue.textContent = pitchSlider.value;
                });
                
                playBtn.addEventListener('click', playSpeech);
                stopBtn.addEventListener('click', stopSpeech);
                resetBtn.addEventListener('click', resetTool);
                downloadBtn.addEventListener('click', downloadSpeech);
                
                // Initialize voices
                speechSynthesis.onvoiceschanged = function() {
                    voices = speechSynthesis.getVoices();
                    populateVoiceOptions();
                };
                
                // For Chrome that doesn't fire voiceschanged event
                setTimeout(() => {
                    voices = speechSynthesis.getVoices();
                    if (voices.length > 0 && voiceOptions.children.length === 0) {
                        populateVoiceOptions();
                    }
                }, 1000);
                
                // Functions
                function populateVoiceOptions() {
                    voiceOptions.innerHTML = '';
                    
                    voices.forEach((voice, index) => {
                        const option = document.createElement('div');
                        option.className = 'voice-option';
                        option.textContent = `${voice.name} (${voice.lang})`;
                        option.setAttribute('data-index', index);
                        
                        option.addEventListener('click', function() {
                            document.querySelectorAll('.voice-option').forEach(opt => {
                                opt.classList.remove('selected');
                            });
                            this.classList.add('selected');
                            selectedVoice = voices[parseInt(this.getAttribute('data-index'))];
                        });
                        
                        // Select first English voice by default
                        if (index === 0 || voice.lang.startsWith('en')) {
                            option.classList.add('selected');
                            selectedVoice = voice;
                        }
                        
                        voiceOptions.appendChild(option);
                    });
                }
                
                function playSpeech() {
                    if (textInput.value.trim() === '') {
                        alert('Please enter some text to convert to speech.');
                        return;
                    }
                    
                    stopSpeech();
                    
                    utterance = new SpeechSynthesisUtterance(textInput.value);
                    
                    if (selectedVoice) {
                        utterance.voice = selectedVoice;
                    }
                    
                    utterance.rate = parseFloat(rateSlider.value);
                    utterance.pitch = parseFloat(pitchSlider.value);
                    
                    // Start recording for download (simulated in this demo)
                    // In a real implementation, you would use the Web Audio API or a service
                    
                    speechSynthesis.speak(utterance);
                }
                
                function stopSpeech() {
                    if (speechSynthesis.speaking) {
                        speechSynthesis.cancel();
                    }
                }
                
                function downloadSpeech() {
                    if (textInput.value.trim() === '') {
                        alert('Please enter some text to convert to speech.');
                        return;
                    }
                    
                    alert('In a production environment, this would use the Web Audio API to record the speech synthesis and save as an MP3 file. For this demo, we\'re simulating the download.');
                    
                    // Simulate download (in real implementation, this would be the recorded audio)
                    const blob = new Blob([textInput.value], { type: 'text/plain' });
                    const url = URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = 'speech.mp3';
                    document.body.appendChild(a);
                    a.click();
                    document.body.removeChild(a);
                    URL.revokeObjectURL(url);
                }
                
                function resetTool() {
                    textInput.value = '';
                    rateSlider.value = 1;
                    rateValue.textContent = '1';
                    pitchSlider.value = 1;
                    pitchValue.textContent = '1';
                    stopSpeech();
                    
                    // Reselect first voice
                    if (voiceOptions.children.length > 0) {
                        document.querySelectorAll('.voice-option').forEach(opt => {
                            opt.classList.remove('selected');
                        });
                        voiceOptions.children[0].classList.add('selected');
                        selectedVoice = voices[0];
                    }
                }
            }
            
            /* QR Code Generator Tool */
            function initQrGenerator() {
                // DOM elements
                const contentInput = document.getElementById('qr-content');
                const sizeSelect = document.getElementById('qr-size');
                const fgColor = document.getElementById('qr-fg-color');
                const bgColor = document.getElementById('qr-bg-color');
                const generateBtn = document.getElementById('generate-qr-btn');
                const resetBtn = document.getElementById('qr-reset-btn');
                const downloadBtn = document.getElementById('download-qr-btn');
                const qrCanvas = document.getElementById('qr-code');
                const results = document.getElementById('qr-results');
                
                // Event listeners
                generateBtn.addEventListener('click', generateQrCode);
                resetBtn.addEventListener('click', resetTool);
                downloadBtn.addEventListener('click', downloadQrCode);
                
                // Functions
                function generateQrCode() {
                    if (contentInput.value.trim() === '') {
                        alert('Please enter content for the QR code.');
                        return;
                    }
                    
                    const size = parseInt(sizeSelect.value);
                    const options = {
                        width: size,
                        height: size,
                        color: {
                            dark: fgColor.value,
                            light: bgColor.value
                        }
                    };
                    
                    QRCode.toCanvas(qrCanvas, contentInput.value, options, (error) => {
                        if (error) {
                            console.error('Error generating QR code:', error);
                            alert('An error occurred while generating the QR code. Please try again.');
                        } else {
                            results.classList.add('active');
                            results.scrollIntoView({ behavior: 'smooth' });
                        }
                    });
                }
                
                function downloadQrCode() {
                    if (contentInput.value.trim() === '') {
                        alert('Please generate a QR code first.');
                        return;
                    }
                    
                    const link = document.createElement('a');
                    link.download = 'qr-code.png';
                    link.href = qrCanvas.toDataURL('image/png');
                    document.body.appendChild(link);
                    link.click();
                    document.body.removeChild(link);
                }
                
                function resetTool() {
                    contentInput.value = '';
                    sizeSelect.value = '200';
                    fgColor.value = '#000000';
                    bgColor.value = '#ffffff';
                    results.classList.remove('active');
                    const ctx = qrCanvas.getContext('2d');
                    ctx.clearRect(0, 0, qrCanvas.width, qrCanvas.height);
                }
            }
            
            /* Helper Functions */
            function formatBytes(bytes, decimals = 2) {
                if (bytes === 0) return '0 Bytes';
                
                const k = 1024;
                const dm = decimals < 0 ? 0 : decimals;
                const sizes = ['Bytes', 'KB', 'MB', 'GB'];
                
                const i = Math.floor(Math.log(bytes) / Math.log(k));
                
                return parseFloat((bytes / Math.pow(k, i)).toFixed(dm)) + ' ' + sizes[i];
            }
        });
    </script>
    
