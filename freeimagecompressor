                        <div class="value" id="pdf-count">0</div>
                        <div class="label">PDFs Merged</div>
                    </div>
                    <div class="stat-item">
                        <div class="value" id="pdf-total-size">0 KB</div>
                        <div class="label">Total Size</div>
                    </div>
                </div>
